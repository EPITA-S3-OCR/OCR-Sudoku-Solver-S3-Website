        </div>
        <ul class="mt-4 flex w-full flex-wrap gap-4">
          {
            postsFinal.map((post) => (
              <li class="grow">
                <a
                  href={post.url}
                  class="block rounded bg-gray-700 p-2 text-center font-bold transition-all hover:bg-gray-500"
                >
                  {post.frontmatter.title}
                </a>
              </li>
            ))
          }
        </ul>
      </div>
    </div>
  </section>
</BaseLayout>
